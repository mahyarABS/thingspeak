    &lt;elevation nil="true" />
    &lt;last-entry-id type="integer" nil="true" />
    &lt;ranking type="integer">15&lt;/ranking>
    &lt;username>hans&lt;/username>
    &lt;tags type="array" />
&lt;/channel>
</pre>

</div>

